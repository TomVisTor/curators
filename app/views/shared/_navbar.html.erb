            <h1 class="mb-3"><a href="#">Explore</a></h1>
            <h1><a href="#">My profile</a></h1>
          </div>
        <% end %>

  </div>
</div>

  <script>
      function openNav() {
        document.getElementById("myNav").style.width = "100%";
      }

      function closeNav() {
        document.getElementById("myNav").style.width = "0%";
      }
  </script>
