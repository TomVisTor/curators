<div class="container">
  <div class="container-sign-in mt-5">
    <h1>Update collection</h1>
  </div>

  <div class="form-inputs mt-5 mb-5 ">
    <%= simple_form_for([@collection]) do |f| %>
      <%= f.input :name,
                  label:"Name",
                  placeholder: '@collection.name'%>
      <div class="mt-5 mb-5">
        <%= f.button :submit, "Create collection", class: "button button-block" %>
      </div>
    <% end %>
  </div>

</div>
