<%= render 'shared/navbars/navbar-burger-title' %>

<div class="container container-mt mb-5">
  <div class="profile">

    <%= cl_image_tag @user.photo.key, alt: "alttext", class: "avatar" %>
    <h3 class="mt-3"><%= @user.name %></h3>
    <p class="body-small mid-gray"><%= @number_of_collections %> collections</p>
    <p class="body-small"><%= @user.description %></p>

  </div>
</div>

<hr>


<div class="container mt-5">
  <% @collections.each_slice(2) do |collection| %>
    <div class="cards-duo">
      <div class="cards-duo-imgs">
        <div class="single-img">
          <%= link_to collection_path(collection) do %>
            <%= cl_image_tag collection[0].artworks.first.photo.key %>
          <% end %>
        </div>

        <% if collection[1] %>
          <div class="single-img">
            <%= link_to collection_path(collection) do %>
              <%= cl_image_tag collection[1].artworks.first.photo.key %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="cards-duo-infos">
        <div class="single-artwork-infos">
          <p class="subtitle"><%= collection[0].name %></p>
          <p style="color:#B1B1B1"><%= collection[0].artworks.count %> artworks</p>
        </div>

        <% if collection[1] %>
          <div class="single-artwork-infos">
            <p class="subtitle"><%= collection[1].name %></p>
            <p style="color:#B1B1B1"><%= collection[1].artworks.count %> artworks</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>